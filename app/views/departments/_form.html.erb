<%= form_for(@department) do |d|%>
 <div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class= "row">
      <div class="col-md-3">
        <%= d.label :name , class: "control-label" %>
      </div>
      <div class="col-md-6">
        <%= d.text_field :name, autofocus: true , class: "form-control" %>
      </div>
    </div>
    </br>
    <%= d.submit"Save",class: "btn btn-success"  %> | 
  <%=link_to"Cancel", root_path%>    
<% end %>
