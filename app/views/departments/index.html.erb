<%= render 'navbar'%>
<h1>All Department for Student</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>
  <% @departments.each do|department|%>
  	<tr>
    	<td><%= department.name %></td>
    	<td>
    		<%= link_to("Delete",department_path(department), method: :delete, data: {confirm: 'Are you sure to delete?'}, class: "btn btn-primary")%>  
    		<%= link_to("Update",edit_department_path(department), class: "btn btn-primary")%>  
    	</td>
  	</tr>
    <% end %>
    <%= link_to("Return to to Home",root_path, class: "btn btn-primary")%>  
</table>