
<h1>All Department for Student</h1>

<table>
  <tr>
    <th>Department Name</th>
    <th>Setting</th>
  </tr>
  <% @departments.each do|department|%>
  	<tr>
    	<td><%= department.name %></td>
    	<td>
    		<%= link_to("Delete",department_path(department), method: :delete, data: {confirm: 'Are you sure to delete?'},class: "btn btn-danger")%>  
    		<%= link_to("Update",edit_department_path(department), class: "btn btn-warning")%>  
    	</td>
  	</tr>
    <% end %>
    <%= link_to("Add New Department",new_department_path, class: "btn btn-primary")%>  
</table>