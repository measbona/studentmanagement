<%= form_for(@student) do |f|%>
<p>
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true %>
  </p>
 <p>
    <%= f.label :gender %><br/>
    <%= f.text_area :gender, autofocus: true %>
  </p>
  <p>
    <%= f.label :address %><br/>
    <%= f.text_field :address, autofocus: true %>
  </p>
  <p>
    <%= f.label :department_id %><br/> 
    <%= select("student", "department_id", Department.all.map{|department| [department.name, department.id]}) %>
  </p>
  <%= f.submit %>
  <%=link_to"Cancel", root_path%>
  <% end %>